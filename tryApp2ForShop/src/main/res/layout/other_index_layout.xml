<?xml version="1.0" encoding="utf-8"?>
<android.extend.widget.ExtendFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">
    <android.extend.widget.ExtendImageView
        android:id="@+id/dzbj"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>
        <FrameLayout
            android:id="@+id/dzbk1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:orientation="vertical">


            <android.extend.widget.ExtendImageView
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />
            <android.extend.widget.ExtendViewPager
                android:id="@+id/viewpager2"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:background="@android:color/transparent" >
            </android.extend.widget.ExtendViewPager>
            <LinearLayout
                android:id="@+id/dot_container2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|bottom"
                android:layout_marginBottom="40px"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:orientation="horizontal" >
            </LinearLayout>
<!--            <ImageView-->
<!--                android:id="@+id/middle_back"-->
<!--                android:layout_width="100dp"-->
<!--                android:layout_height="100dp"-->
<!--                android:scaleType="fitCenter"-->
<!--                android:src="@drawable/fanhui" />-->
        </FrameLayout>

    <!-- android:background="@android:colo/white"
android:paddingBottom="40px"
android:paddingLeft="140px"
android:paddingRight="140px" -->
    <HorizontalScrollView
        android:id="@+id/dzbk2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:alpha="50"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="360dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/nvjie"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/womenring" />

        <ImageView
            android:id="@+id/nanjie"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/menring" />

        <ImageView
            android:id="@+id/diaozhui"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/diaozhui" />

        <ImageView
            android:id="@+id/shoulian"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/shoulian" />

        <ImageView
            android:id="@+id/kelajie"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/kelajie" />


        <ImageView
            android:id="@+id/duijie"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/duijie" />

        <ImageView
            android:id="@+id/erding"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/erding" />

        <ImageView
            android:id="@+id/taoxi"
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:src="@drawable/taoxi" />


    </LinearLayout>
    </HorizontalScrollView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="80dp"
                android:gravity="center"
                android:text="现货总库存:"
                android:textColor="@color/main_menubar_background"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/product_all_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="货数"
                android:textColor="@color/main_menubar_background"

                android:textSize="25dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="(预计3-5天到货)"
                android:textColor="@color/main_menubar_background"
                android:textSize="25dp" />
        </LinearLayout>


    </FrameLayout>
    <android.extend.widget.FragmentContainer
        android:id="@+id/search_number"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"></android.extend.widget.FragmentContainer>
    <android.extend.widget.ExtendLinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical">
       <android.extend.widget.ExtendLinearLayout
           android:gravity="center"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="产品总库存:   "
               android:textColor="@color/main_menubar_background"
               android:textSize="25dp"/>
           <TextView
               android:id="@+id/product_all_number2"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="25dp"
               android:textColor="@color/main_menubar_background"
               android:text="货数"/>
       </android.extend.widget.ExtendLinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="5dp"
                android:text="现货预计1-3天到货"
                android:textSize="15dp"/>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:gravity="center">

        <FrameLayout
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:background="#C98A76"
            >

            <EditText
                android:id="@+id/product_search_number"
                android:layout_width="249dp"
                android:layout_height="49dp"
                android:hint="            款号或名称"
                android:background="#fff"
                android:layout_marginLeft="0.5dp"
                android:layout_marginTop="0.25dp"
                />
                <Button
                    android:id="@+id/product_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="200dp"
                    android:gravity="center"
                    android:background="@drawable/search_all"
                    android:layout_marginTop="10dp"
                    />

        </FrameLayout>
        </LinearLayout>
    </android.extend.widget.ExtendLinearLayout>

    <android.extend.widget.adapter.ScrollGridView
        android:id="@+id/index_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:visibility="gone"
        android:scrollbars="none" >
    </android.extend.widget.adapter.ScrollGridView>

</android.extend.widget.ExtendFrameLayout>